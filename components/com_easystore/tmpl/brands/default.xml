<?xml version="1.0" encoding="utf-8"?>
<metadata>
    <layout title="COM_EASYSTORE_BRANDS_MENU_TITLE">
        <message><![CDATA[COM_EASYSTORE_BRANDS_MENU_DESC]]></message>
    </layout>

    <fields name="request">
        <fieldset name="request">
            <field name="brand_id" type="sql" label="COM_EASYSTORE_PRODUCT_FIELD_BRAND"
                hint="COM_EASYSTORE_PRODUCT_FIELD_BRAND_HINT" sql_select="id, title"
                sql_from="#__easystore_brands" sql_order="title ASC" key_field="id"
                value_field="title">
                <option value="">COM_EASYSTORE_PRODUCT_FIELD_BRAND_HINT</option>
            </field>
        </fieldset>
    </fields>

    <fields name="params">
        <fieldset name="advanced" label="COM_EASYSTORE_ATTRIBS_BRAND_SETTINGS_LABEL">
            <field
                name="show_brand_title" type="radio" label="COM_EASYSTORE_HIDE_TITLE_LABEL"
                class="form-select-color-state" layout="joomla.form.field.radio.switcher"
                default="1"
                filter="integer">
                <option value="1">JNO</option>
                <option value="0">JYES</option>
            </field>
            <field name="show_brand_title_link" type="radio"
                label="COM_EASYSTORE_LINKED_TITLES_LABEL" layout="joomla.form.field.radio.switcher"
                class="form-select-color-state"
                default="1"
                showon="show_brand_title:1"
                filter="integer">
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>
            <field name="show_brand_image" type="radio"
                label="COM_EASYSTORE_HIDE_IMAGE_LABEL" layout="joomla.form.field.radio.switcher"
                class="form-select-color-state"
                default="1"
                filter="integer">
                <option value="1">JNO</option>
                <option value="0">JYES</option>
            </field>

            <field name="show_brand_image_link" type="radio"
                label="COM_EASYSTORE_LINKED_IMAGE_LABEL" layout="joomla.form.field.radio.switcher"
                class="form-select-color-state"
                default="1"
                showon="show_brand_image:1"
                filter="integer">
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>

            <field name="show_brand_product_count" type="radio"
                label="COM_EASYSTORE_HIDE_PRODUCT_COUNT_LABEL"
                layout="joomla.form.field.radio.switcher"
                class="form-select-color-state"
                default="1"
                filter="integer">
                <option value="1">JNO</option>
                <option value="0">JYES</option>
            </field>
            <!-- field for set pagination number-->
            <field name="easystore_brand_pagination_limit" type="number"
                label="COM_EASYSTORE_PAGINATION_NUMBER_LABEL"
                hint="COM_EASYSTORE_PAGINATION_NUMBER_HINT"
                default="12"
                min="1"
                max="1000"
                step="1"
                filter="integer">
            </field>
            <!--field
            for grid column-->
            <field name="easystore_columns_count" type="list"
                label="COM_EASYSTORE_GRID_COLUMN_NUMBER_LABEL"
                hint="COM_EASYSTORE_GRID_COLUMN_NUMBER_HINT"
                default="4"
                filter="integer">
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
                <option value="6">6</option>
            </field>
        </fieldset>
    </fields>
</metadata>