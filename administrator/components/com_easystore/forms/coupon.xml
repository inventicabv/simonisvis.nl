<?xml version="1.0" encoding="UTF-8"?>
<form>
    <field
        name="alias"
        type="text"
        label="JFIELD_ALIAS_LABEL"
        description="JFIELD_ALIAS_DESC"
        hint="JFIELD_ALIAS_PLACEHOLDER"
    />

    <field
        name="title"
        type="text"
        label="JGLOBAL_TITLE"
        required="true"
    />

    <fieldset name="basic">
        <field
            name="id"
            type="hidden"
            label="JGLOBAL_FIELD_ID_LABEL"
        />

        <field
            name="published"
            type="list"
            label="JSTATUS"
            class="form-select-color-state"
            default="1"
            validate="options"
            >
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="2">JARCHIVED</option>
            <option value="-2">JTRASHED</option>
        </field>
    </fieldset>
    
    <fieldset name="coupon">
        <field
            name="code"
            type="text"
            label="COM_EASYSTORE_COUPON_LABEL_CODE"
            required="true"
        />

        <field
            name="discount_type"
            type="list"
            label="COM_EASYSTORE_PRODUCT_FIELD_DISCOUNT_TYPE"
            class="form-select-color-state"
            >
            <option value="percent">COM_EASYSTORE_PRODUCT_FIELD_DISCOUNT_TYPE_PERCENTAGE</option>
            <option value="amount">COM_EASYSTORE_PRODUCT_FIELD_DISCOUNT_TYPE_AMOUNT</option>
        </field>

        <field
            name="discount_value"
            type="text"
            label="COM_EASYSTORE_PRODUCT_FIELD_DISCOUNT_VALUE"
            description="COM_EASYSTORE_PRODUCT_FIELD_DISCOUNT_VALUE_DESC"
            default="0"
            validation="decimal(13,2)"
            filter="decimal"
        />

        <field
            name="start_date"
            type="calendar"
            label="COM_EASYSTORE_COUPON_LABEL_START_DATE"
            translateformat="true"
            showtime="true"
            filter="user_utc"
            required="true"
        />

        <field
            name="has_date"
            type="checkbox"
            label="COM_EASYSTORE_COUPON_LABEL_HAS_DATE"
            description="COM_EASYSTORE_COUPON_LABEL_HAS_DATE_DESC"
            value=""
        />

        <field
            name="end_date"
            type="calendar"
            label="COM_EASYSTORE_COUPON_LABEL_END_DATE"
            translateformat="true"
            showtime="true"
            filter="user_utc"
            showon="has_date:1"
        />
    </fieldset>

    <fieldset name="publishing">
        <field
            name="created_by"
            type="user"
            label="JGLOBAL_FIELD_CREATED_BY_LABEL"
            validate="UserId"
        />

        <field
            name="created"
            type="calendar"
            label="JGLOBAL_CREATED_DATE"
            translateformat="true"
            showtime="true"
            filter="user_utc"
        />

        <field
            name="modified_by"
            type="hidden"
            label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
            filter="unset"
            validate="UserId"
        />

        <field
            name="modified"
            type="hidden"
            label="JGLOBAL_FIELD_MODIFIED_LABEL"
            translateformat="true"
            showtime="true"
            filter="user_utc"
        />
	</fieldset>
</form>
