<?xml version="1.0" encoding="UTF-8"?>
<form >
    <fieldset name="basic">
        <field
            name="id"
            type="hidden"
            label="JGLOBAL_FIELD_ID_LABEL"
        />
        
        <field
            name="published"
            type="list"
            label="JSTATUS"
            class="form-select-color-state"
            default="1"
            validate="options"
        >
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="2">JARCHIVED</option>
            <option value="-2">JTRASHED</option>
        </field>
    </fieldset>

    <fieldset name="review">

        <field
			name="product_id"
			type="EasystoreItemList"
			label="COM_EASYSTORE_FIELDSET_CONFIG_PRODUCT_OPTIONS_LABEL"
			table_name="#__easystore_products"
			key_field="id"
			value_field="title"
			required="true"		
            addfieldprefix="JoomShaper\Component\EasyStore\Administrator\Field"
		/>

        <field
            name="rating"
            type="list"
            label="COM_EASYSTORE_REVIEW_RATING"
            default="1"
            validate="options"
        >
            <option value="1"><?php echo Text::_('COM_EASYSTORE_REVIEW_RATING_ONE_STAR'); ?></option>
            <option value="2"><?php echo Text::_('COM_EASYSTORE_REVIEW_RATING_TWO_STAR'); ?></option>
            <option value="3"><?php echo Text::_('COM_EASYSTORE_REVIEW_RATING_THREE_STAR'); ?></option>
            <option value="4"><?php echo Text::_('COM_EASYSTORE_REVIEW_RATING_FOUR_STAR'); ?></option>
            <option value="5"><?php echo Text::_('COM_EASYSTORE_REVIEW_RATING_FIVE_STAR'); ?></option>
        </field>

        <field
            name="subject"
            type="text"
            label="COM_EASYSTORE_REVIEW_SUBJECT"
        />

        <field
            name="review"
            type="editor"
            label="COM_EASYSTORE_REVIEW_MESSAGE"
            filter="safehtml"
        />
    </fieldset>

    <fieldset name="publishing">
        <field
            name="created_by"
            type="user"
            label="JGLOBAL_FIELD_CREATED_BY_LABEL"
            validate="UserId"
        />

        <field
            name="created"
            type="calendar"
            label="JGLOBAL_CREATED_DATE"
            translateformat="true"
            showtime="true"
            filter="user_utc"
        />

        <field
            name="modified_by"
            type="hidden"
            label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
            filter="unset"
            validate="UserId"
        />

        <field
            name="modified"
            type="hidden"
            label="JGLOBAL_FIELD_MODIFIED_LABEL"
            translateformat="true"
            showtime="true"
            filter="user_utc"
        />
    </fieldset>
</form>