<?xml version="1.0" encoding="UTF-8"?>
<form>
	<fields name="filter">
		<field
			name="search"
			type="text"
			inputmode="search"
			label="COM_EASYSTORE_USERS_FILTER_SEARCH_LABEL"
			description="COM_EASYSTORE_USERS_FILTER_SEARCH_LABEL_DESC"
			hint="JSEARCH_FILTER"
		/>
	</fields>
	<fields name="list">
		<field
			name="fullordering"
			type="list"
			label="JGLOBAL_SORT_BY"
			class="js-select-submit-on-change"
			default="a.id ASC"
			validate="options"
			>
			<option value="">JGLOBAL_SORT_BY</option>
			<option value="name ASC">COM_EASYSTORE_USERS_FULL_NAME_ASC</option>
			<option value="name DESC">COM_EASYSTORE_USERS_FULL_NAME_DESC</option>
			<option value="a.id ASC">JGRID_HEADING_ID_ASC</option>
			<option value="a.id DESC">JGRID_HEADING_ID_DESC</option>
			<option value="orders ASC">COM_EASYSTORE_USERS_TOTAL_ORDERS_ASC</option>
			<option value="orders DESC">COM_EASYSTORE_USERS_TOTAL_ORDERS_DESC</option>
			<option value="total_spend ASC">COM_EASYSTORE_USERS_TOTAL_SPENDS_ASC</option>
			<option value="total_spend DESC">COM_EASYSTORE_USERS_TOTAL_SPENDS_DESC</option>
		</field>
		<field
			name="limit"
			type="limitbox"
			label="JGLOBAL_LIST_LIMIT"
			default="25"
			class="js-select-submit-on-change"
		/>
	</fields>
</form>
