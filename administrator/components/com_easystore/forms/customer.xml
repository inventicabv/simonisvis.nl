<?xml version="1.0" encoding="UTF-8"?>
<form addfieldprefix="JoomShaper\Component\EasyStore\Administrator\Field">
	<fieldset name="basic">
		<field
			name="id"
			type="hidden"
			label="JGLOBAL_FIELD_ID_LABEL"
		/>
		<field
			name="user_id"
			type="hidden"
			label="JGLOBAL_FIELD_ID_LABEL"
		/>
		<field
			name="name"
			type="text"
			label="COM_EASYSTORE_USERS_FULL_NAME"
			required="true"
		/>
		<field
			name="image"
			type="media"
			label="COM_EASYSTORE_USERS_IMAGE"
			directory="easystore"
		/>
		<field
			name="email"
			type="email"
			label="COM_EASYSTORE_USER_EMAIL"
			required="true"
		/>
		<field 
			name="phone"
			type="text"
			label="COM_EASYSTORE_USERS_PHONE"
			required="true"
		/>
		<field 
			name="company_name"
			type="text"
			label="COM_EASYSTORE_USERS_COMPANY_NAME"
		/>
		<field 
			name="company_id"
			type="text"
			label="COM_EASYSTORE_USERS_COMPANY_ID"
		/>
		<field 
			name="vat_information"
			type="text"
			label="COM_EASYSTORE_USERS_VATIN"
		/>
	</fieldset>

	<fieldset name="shipping_address">
		<field
			name="shipping_customer_name"
			type="text"
			label="COM_EASYSTORE_USERS_NAME"
		/>
		<field 
			name="shipping_country"
			type="EasystoreCountry"
			label="COM_EASYSTORE_USERS_COUNTRY"
			listType="country"
		/>
		<field 
			name="shipping_state"
			type="EasystoreCountry"
			label="COM_EASYSTORE_USERS_STATE"
			listType="state"
		/>
		<field
			name="shipping_city"
			type="text"
			label="COM_EASYSTORE_USERS_CITY"
		/>
		<field
			name="shipping_zip_code"
			type="text"
			label="COM_EASYSTORE_USERS_ZIP_CODE"
		/>
		<field
			name="shipping_address_1"
			type="textarea"
			label="COM_EASYSTORE_USERS_ADDRESS_1"
		/>
		<field
			name="shipping_address_2"
			type="textarea"
			label="COM_EASYSTORE_USERS_ADDRESS_2"
		/>

		<field
			name="is_billing_and_shipping_address_same"
			type="radio"
			label="COM_EASYSTORE_USER_SAME_SHIPPING_AND_BILLING_ADDRESS"
			layout="joomla.form.field.radio.switcher"
			default="0"
			filter="integer"
			>
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>

	</fieldset>

	<fieldset name="billing_address" >
		<field
			name="billing_customer_name"
			type="text"
			label="COM_EASYSTORE_USERS_NAME"
			showon='is_billing_and_shipping_address_same:0'
		/>
		<field 
			name="billing_country"
			type="EasystoreCountry"
			label="COM_EASYSTORE_USERS_COUNTRY"
			listType="country"
			showon='is_billing_and_shipping_address_same:0'
		/>
		<field 
			name="billing_state"
			type="EasystoreCountry"
			label="COM_EASYSTORE_USERS_STATE"
			listType="state"
			showon='is_billing_and_shipping_address_same:0'
		/>
		<field
			name="billing_city"
			type="text"
			label="COM_EASYSTORE_USERS_CITY"
			showon='is_billing_and_shipping_address_same:0'
		/>
		<field
			name="billing_zip_code"
			type="text"
			label="COM_EASYSTORE_USERS_ZIP_CODE"
			showon='is_billing_and_shipping_address_same:0'
		/>
		<field
			name="billing_address_1"
			type="textarea"
			label="COM_EASYSTORE_USERS_ADDRESS_1"
			showon='is_billing_and_shipping_address_same:0'
		/>
		<field
			name="billing_address_2"
			type="textarea"
			label="COM_EASYSTORE_USERS_ADDRESS_2"
			showon='is_billing_and_shipping_address_same:0'
		/>
		<field 
			name="billing_address_note" 
			type="note" 
			class="alert alert-info" 
			label="COM_EASYSTORE_USER_SAME_SHIPPING_AND_BILLING_ADDRESS_NOTE"
			showon='is_billing_and_shipping_address_same:1'
		/>

	</fieldset>

	<fieldset name="publishing">
		<field
			name="created_by"
			type="user"
			label="JGLOBAL_FIELD_CREATED_BY_LABEL"
			validate="UserId"
		/>
		<field
			name="created"
			type="calendar"
			label="JGLOBAL_CREATED_DATE"
			translateformat="true"
			showtime="true"
			filter="user_utc"
		/>
		<field
			name="modified_by"
			type="hidden"
			label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
			filter="unset"
			validate="UserId"
		/>
		<field
			name="modified"
			type="hidden"
			label="JGLOBAL_FIELD_MODIFIED_LABEL"
			translateformat="true"
			showtime="true"
			filter="user_utc"
		/>
	</fieldset>
</form>