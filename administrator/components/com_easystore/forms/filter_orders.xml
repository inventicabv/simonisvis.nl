<?xml version="1.0" encoding="UTF-8"?>
<form>

	<fields name="filter">

		<field
			name="search"
			type="text"
			inputmode="search"
			label="COM_EASYSTORE_ORDERS_FILTER_SEARCH_LABEL"
			description="COM_EASYSTORE_ORDERS_FILTER_SEARCH_DESC"
			hint="JSEARCH_FILTER"
		/>

		<field
			name="published"
			type="status"
			label="JSTATUS"
			optionsFilter="*,1,-2"
			class="js-select-submit-on-change"
			>
			<option value="">JOPTION_SELECT_PUBLISHED</option>
		</field>

		<field
			name="payment_status"
			type="list"
			label="COM_EASYSTORE_SELECT_PAYMENT_STATUS"
			class="js-select-submit-on-change"
			default=""
			validate="options"
			>
			<option value="">COM_EASYSTORE_SELECT_PAYMENT_STATUS_DEFAULT</option>
			<option value="paid">COM_EASYSTORE_SELECT_PAYMENT_STATUS_PAID</option>
			<option value="unpaid">COM_EASYSTORE_SELECT_PAYMENT_STATUS_UNPAID</option>
			<option value="pending">COM_EASYSTORE_SELECT_PAYMENT_STATUS_PENDING</option>
			<option value="refunded">COM_EASYSTORE_SELECT_PAYMENT_STATUS_REFUNDED</option>
			<option value="failed">COM_EASYSTORE_SELECT_PAYMENT_STATUS_FAILED</option>
		</field>

		<field
			name="fulfilment"
			type="list"
			label="COM_EASYSTORE_SELECT_FULFILMENT"
			class="js-select-submit-on-change"
			default=""
			validate="options"
			>
			<option value="">COM_EASYSTORE_SELECT_FULFILMENT_DEFAULT</option>
			<option value="fulfilled">COM_EASYSTORE_SELECT_FULFILMENT_FULFILLED</option>
			<option value="unfulfilled">COM_EASYSTORE_SELECT_FULFILMENT_UNFULFILLED</option>
		</field>

		<field
			name="custom_invoice_id"
			type="text"
			inputmode="search"
			label="COM_EASYSTORE_ORDERS_FILTER_CUSTOM_INVOICE_ID_LABEL"
			description="COM_EASYSTORE_ORDERS_FILTER_CUSTOM_INVOICE_ID_DESC"
			hint="COM_EASYSTORE_ORDERS_FILTER_CUSTOM_INVOICE_ID_PLACEHOLDER"
		/>
	</fields>

	<fields name="list">

		<field
			name="fullordering"
			type="list"
			label="JGLOBAL_SORT_BY"
			default="a.id DESC"
			class="js-select-submit-on-change"
			validate="options"
			>
			<option value="">JGLOBAL_SORT_BY</option>
			<option value="a.ordering ASC">JGRID_HEADING_ORDERING_ASC</option>
			<option value="a.ordering DESC">JGRID_HEADING_ORDERING_DESC</option>
			<option value="a.created ASC">COM_EASYSTORE_FILTER_ORDER_DATE_ASC</option>
			<option value="a.created DESC">COM_EASYSTORE_FILTER_ORDER_DATE_DESC</option>
			<option value="customer_name ASC">COM_EASYSTORE_FILTER_ORDER_CUSTOMER_ASC</option>
			<option value="customer_name DESC">COM_EASYSTORE_FILTER_ORDER_CUSTOMER_DESC</option>
			<option value="a.payment_status ASC">COM_EASYSTORE_FILTER_ORDER_PAYMENT_ASC</option>
			<option value="a.payment_status DESC">COM_EASYSTORE_FILTER_ORDER_PAYMENT_DESC</option>
			<option value="a.fulfilment ASC">COM_EASYSTORE_FILTER_ORDER_FULFILMENT_ASC</option>
			<option value="a.fulfilment DESC">COM_EASYSTORE_FILTER_ORDER_FULFILMENT_DESC</option>
			<option value="a.id ASC">JGRID_HEADING_ID_ASC</option>
			<option value="a.id DESC">JGRID_HEADING_ID_DESC</option>
		</field>

		<field
			name="limit"
			type="limitbox"
			label="JGLOBAL_LIST_LIMIT"
			default="25"
			class="js-select-submit-on-change"
		/>
	</fields>
</form>
