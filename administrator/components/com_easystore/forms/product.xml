<?xml version="1.0" encoding="UTF-8"?>
<form addfieldprefix="JoomShaper\Component\EasyStore\Administrator\Field">
	<fieldset name="basic">
		<field name="id" type="hidden" label="JGLOBAL_FIELD_ID_LABEL" class="readonly"
			readonly="true" />

		<field name="published" type="list" label="JSTATUS" class="form-select-color-state"
			default="1" validate="options">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>

		<field name="catid" type="EasystoreItemList" label="COM_EASYSTORE_CATEGORY"
			table_name="#__easystore_categories" key_field="id" value_field="title" required="true">
			<option value="">COM_EASYSTORE_FIELD_EMPTY_LABEL</option>
		</field>
	</fieldset>

	<fieldset name="featured">
		<field name="featured" type="radio" layout="joomla.form.field.radio.switcher"
			label="COM_EASYSTORE_PRODUCT_FIELD_IS_FEATURED" parentclass="easystore-inline-field"
			default="0">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
	</fieldset>

	<field name="alias" type="text" label="JFIELD_ALIAS_LABEL" description="JFIELD_ALIAS_DESC"
		hint="JFIELD_ALIAS_PLACEHOLDER" />

	<field name="title" type="text" label="JGLOBAL_TITLE" required="true" />

	<field name="description" type="editor" label="JGLOBAL_DESCRIPTION"
		filter="\Joomla\CMS\Component\ComponentHelper::filterText" buttons="true"
		hide="readmore,pagebreak" />

	<field name="product_option_variants" type="EasystoreVariant"
		label="COM_EASYSTORE_PRODUCT_OPTIONS"
		filter="\Joomla\CMS\Component\ComponentHelper::filterText" />

	<field name="additional_data" type="text"
		filter="\Joomla\CMS\Component\ComponentHelper::filterText" class="readonly" readonly="true" />

	<field
		name="upsells"
		type="EasystoreBrowseProducts"
		label="COM_EASYSTORE_PRODUCT_UPSELLS"
		id="upsells"
	/>

	<field
		name="crossells"
		type="EasystoreBrowseProducts"
		label="COM_EASYSTORE_PRODUCT_CROSSELLS"
		id="crossells"
	/>

	<fieldset name="others">
		<field name="tag_id" type="EasystoreItemList" label="JTAG" multiple="true"
			table_name="#__easystore_tags" key_field="id" value_field="title" />
		<field name="collections" type="sql" label="COM_EASYSTORE_PRODUCT_FIELD_COLLECTIONS"
			hint="COM_EASYSTORE_PRODUCT_FIELD_COLLECTIONS_HINT" multiple="true"
			sql_select="id, title" sql_from="#__easystore_collections" sql_order="title ASC"
			key_field="id" value_field="title" layout="joomla.form.field.list-fancy-select" />

		<field name="brand_id" type="sql" label="COM_EASYSTORE_PRODUCT_FIELD_BRAND"
			hint="COM_EASYSTORE_PRODUCT_FIELD_BRAND_HINT" sql_select="id, title"
			sql_from="#__easystore_brands" sql_order="title ASC" key_field="id" value_field="title"
			layout="joomla.form.field.list-fancy-select">
			<option value="">COM_EASYSTORE_PRODUCT_FIELD_BRAND_HINT</option>
		</field>

		<field name="dimension" type="EasystoreUnit" addonBefore="dimension"
			label="COM_EASYSTORE_PRODUCT_FIELD_DIMENSION" />

		<field name="access" type="accesslevel" label="JFIELD_ACCESS_LABEL" filter="UINT"
			validate="options" />
	</fieldset>

	<fieldset name="publishing">
		<field name="created_by" type="user" label="JGLOBAL_FIELD_CREATED_BY_LABEL"
			validate="UserId" />

		<field name="created" type="calendar" label="JGLOBAL_CREATED_DATE" class="readonly"
			translateformat="true" showtime="true" filter="user_utc" />

		<field name="modified_by" type="hidden" label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
			readonly="true" filter="unset" validate="UserId" />

		<field name="modified" type="hidden" label="JGLOBAL_FIELD_MODIFIED_LABEL"
			translateformat="true" showtime="true" filter="user_utc" readonly="true" />

		<field name="language" type="contentlanguage" label="JFIELD_LANGUAGE_LABEL">
			<option value="*">JALL</option>
		</field>
	</fieldset>


	<field name="metatitle" type="text" label="COM_EASYSTORE_FIELD_META_TITLE_LABEL" />

	<field name="metadesc" type="textarea" label="JFIELD_META_DESCRIPTION_LABEL" rows="3" cols="40"
		maxlength="160" charcounter="true" />

	<field name="metakey" type="textarea" label="JFIELD_META_KEYWORDS_LABEL" rows="3" cols="40" />

	<fields name="metadata" label="JGLOBAL_FIELDSET_METADATA_OPTIONS">
		<fieldset name="jmetadata" label="JGLOBAL_FIELDSET_METADATA_OPTIONS">
			<field name="robots" type="list" label="JFIELD_METADATA_ROBOTS_LABEL" validate="options">
				<option value="">JGLOBAL_USE_GLOBAL</option>
				<option value="index, follow"></option>
				<option value="noindex, follow"></option>
				<option value="index, nofollow"></option>
				<option value="noindex, nofollow"></option>
			</field>
		</fieldset>
	</fields>
</form>