<?xml version="1.0" encoding="UTF-8"?>
<form addfieldprefix="JoomShaper\Component\EasyStore\Administrator\Field">
    <field
        name="title"
        type="text"
        label="JGLOBAL_TITLE"
        required="true"
    />
    
    <field
        name="alias"
        type="text"
        label="JFIELD_ALIAS_LABEL"
        description="JFIELD_ALIAS_DESC"
        hint="JFIELD_ALIAS_PLACEHOLDER"
    />

    <field
        name="description"
        type="editor"
        label="JGLOBAL_DESCRIPTION"
        filter="\Joomla\CMS\Component\ComponentHelper::filterText"
        buttons="true"
        hide="readmore,pagebreak"
    />

    <field
        name="image"
        type="media"
        label="COM_EASYSTORE_CATEGORY_IMAGE"
    />

    <fieldset name="basic">
        <field
            name="id"
            type="hidden"
            label="JGLOBAL_FIELD_ID_LABEL"
            readonly="true"
        />

        <field
            name="published"
            type="list"
            label="JSTATUS"
            class="form-select-color-state"
            default="1"
            validate="options"
            >
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="2">JARCHIVED</option>
            <option value="-2">JTRASHED</option>
        </field>

        <field
            name="parent_id"
            type="EasystoreItemList"
            label="COM_EASYSTORE_CATEGORIES_FIELD_PARENT_LABEL"
            table_name="#__easystore_categories"
            key_field="id"
            value_field="title"
            validate="options"	
            >
                <option value="0">COM_EASYSTORE_FIELD_EMPTY_LABEL</option>
            </field>
    </fieldset>

    <fieldset name="publishing">
        <field
            name="access"
            type="accesslevel"
            label="JFIELD_ACCESS_LABEL"
            filter="UINT"
            validate="options"
        />

        <field
            name="created_by"
            type="user"
            label="JGLOBAL_FIELD_CREATED_BY_LABEL"
            validate="UserId"
        />

        <field
            name="created"
            type="calendar"
            label="JGLOBAL_CREATED_DATE"
            translateformat="true"
            showtime="true"
            filter="user_utc"
        />

        <field
            name="modified_by"
            type="hidden"
            label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
            filter="unset"
            validate="UserId"
        />

        <field
            name="modified"
            type="hidden"
            label="JGLOBAL_FIELD_MODIFIED_LABEL"
            translateformat="true"
            showtime="true"
            filter="user_utc"
        />

        <field
            name="language"
            type="contentlanguage"
            label="JFIELD_LANGUAGE_LABEL"
            >
            <option value="*">JALL</option>
        </field>
    </fieldset>
</form>