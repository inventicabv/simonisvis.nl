					type="list"
					label="PLG_EASYSTORE_LOADMODULE_FIELD_STYLE_LABEL"
					default="none"
					validate="options"
					>
					<option value="none">PLG_EASYSTORE_LOADMODULE_FIELD_VALUE_RAW</option>
					<option value="html5">PLG_EASYSTORE_LOADMODULE_FIELD_VALUE_DIVS</option>
					<option value="table">PLG_EASYSTORE_LOADMODULE_FIELD_VALUE_TABLE</option>
