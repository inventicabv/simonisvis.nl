	<authorUrl>joomshaper.com</authorUrl>
	<version>1.0.0</version>
	<description>PLG_EASYSTORE_LOADMODULE_XML_DESCRIPTION</description>
	<namespace path="src">JoomShaper\Plugin\Content\EasyStoreLoadModule</namespace>
	<files>
		<folder plugin="easystoreloadmodule">services</folder>
		<folder>src</folder>
	</files>
	<languages>
		<language tag="en-GB">plg_content_easystoreloadmodule.ini</language>
		<language tag="en-GB">plg_content_easystoreloadmodule.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
